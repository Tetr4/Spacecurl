<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/GrayActionBar</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="GrayActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/holo_gray_light</item>
    </style>

    <!-- Theme with Overlay -->
    <style name="ThemeWithOverlay" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>
  
    
    <!--  Transparent ActionBar -->
    <style name="TransparentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <!-- <item name="android:height">128dp</item> -->
    </style>
    
    
</resources>
