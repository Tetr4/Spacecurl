<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Theme with Overlay -->
    <style name="ThemeWithOverlay" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <!-- Theme without Overlay -->
    <style name="ThemeWithoutOverlay" parent ="AppBaseTheme">
		<item name="android:windowActionBarOverlay">false</item>
	    <!-- <item name="android:displayOptions">showHome|homeAsUp|showTitle</item> -->
    </style>
    
    
    <!--  Transparent ActionBar -->
    <style name="TransparentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <!-- <item name="android:height">128dp</item> -->
    </style>
    
    
</resources>
