<?xml version="1.0" encoding="utf-8"?>
<!-- Card -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/training_item_height"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:descendantFocusability="blocksDescendants" >
 
        <!-- Name -->
    <TextView
        android:id="@+id/freeplay_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:gravity="left|center_vertical"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:text="@string/action_freeplay"/>

    <ImageButton
        android:id="@+id/freeplay_play_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/training_play_button"
        android:src="@drawable/ic_play2"/>

</LinearLayout>