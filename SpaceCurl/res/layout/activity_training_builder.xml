<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackish" >
    
    <!-- Card List -->
    <it.gmariotti.cardslib.library.view.CardListView
        android:id="@+id/game_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Add Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/add_button_bar" >
        
        <ImageButton
        android:id="@+id/game_add_button"
        android:layout_width="@dimen/add_button_diameter"
        android:layout_height="@dimen/add_button_diameter"
        android:layout_margin="@dimen/add_button_margin"
        android:contentDescription="@string/training_addbutton"
        android:layout_gravity="center"
        android:src="@drawable/ic_add"
        android:background="@drawable/add_button" />

    </FrameLayout>
    
</FrameLayout>