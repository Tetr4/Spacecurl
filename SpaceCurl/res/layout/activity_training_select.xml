<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackish">

    <!-- Training List -->
    <ListView
        android:id="@+id/training_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:scrollbarStyle="outsideInset"/>
    
    <!-- Freeplay Selection -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/freeplay_item_height"
        android:background="@drawable/freeplay_bar" >
        <include
            layout="@layout/list_item_freeplay" >
        </include>
    </FrameLayout>

    <!-- Add Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/add_button_bar" >
        <ImageButton
            android:id="@+id/training_add_button"
            android:layout_width="@dimen/add_button_diameter"
            android:layout_height="@dimen/add_button_diameter"
            android:layout_gravity="center"
            android:layout_margin="@dimen/add_button_margin"
            android:background="@drawable/add_button"
            android:contentDescription="@string/training_addbutton"
            android:src="@drawable/ic_add" />
    </FrameLayout>

</FrameLayout>